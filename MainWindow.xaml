<Window x:Class="ProgICETask3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgICETask3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top">
        <Label Content="Room Rental Application Form" FontSize="16" HorizontalAlignment="Left" Height="41" Margin="300,32,0,0" VerticalAlignment="Top" Width="229" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0" AngleY="0.245"/>
                    <RotateTransform/>
                    <TranslateTransform X="0" Y="-0.472"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Application Name" HorizontalAlignment="Left" Height="25" Margin="18,75,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Content="Phone Number" HorizontalAlignment="Left" Height="26" Margin="18,147,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Content="Address" HorizontalAlignment="Left" Height="26" Margin="18,212,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="18,105,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="186"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="400,105,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="18,178,0,0" TextWrapping="Wrap" Text="### ### ####" VerticalAlignment="Top" Width="757"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="18,238,0,0" TextWrapping="Wrap" Text="Street Addresss" VerticalAlignment="Top" Width="757"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="18,270,0,0" TextWrapping="Wrap" Text="City" VerticalAlignment="Top" Width="186"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="400,270,0,0" TextWrapping="Wrap" Text="Postal Code" VerticalAlignment="Top" Width="172"/>
        <Button Content="Submit" Click="SubmitButton_Click" HorizontalAlignment="Left" Margin="300,320,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
